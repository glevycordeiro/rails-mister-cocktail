<%= cl_image_tag "storzphjqdgonivkfpex", width: 400, height: 300, crop: :fill %>

<div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-lg-3">
      <div class="card">
        <img src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1586&q=80" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <p><%= cocktail.ingredients.map(&:name).to_sentence %></p>
          <%= link_to "Recipe", cocktail_path(cocktail), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
